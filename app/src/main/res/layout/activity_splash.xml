<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    tools:context=".SplashActivity">

    <!-- ✅ Full logo + curtain (centered as a block) -->
    <RelativeLayout
        android:id="@+id/wrapper_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_full_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/homeofveltechfulllogo"
            android:visibility="invisible" />

        <View
            android:id="@+id/iv_invisible_anchor"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_alignTop="@id/iv_full_logo"
            android:layout_alignBottom="@id/iv_full_logo"
            android:layout_alignStart="@id/iv_full_logo"
            android:visibility="invisible" />

        <View
            android:id="@+id/view_curtain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/iv_full_logo"
            android:layout_alignBottom="@id/iv_full_logo"
            android:layout_alignEnd="@id/iv_full_logo"
            android:layout_toEndOf="@id/iv_invisible_anchor"
            android:background="@color/splash_background" />

    </RelativeLayout>

    <!-- ✅ Moving icon (THIS is now perfectly centered on the screen) -->
    <ImageView
        android:id="@+id/iv_moving_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/homeofveltechicon" />

</RelativeLayout>
