<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#1A000000"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Header click area -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/txt_semester_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Semester 1"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/sf_pro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ring_wrap"
                android:layout_marginEnd="12dp" />

            <!-- Bigger container so ring never clips -->
            <FrameLayout
                android:id="@+id/ring_wrap"
                android:layout_width="86dp"
                android:layout_height="86dp"
                app:layout_constraintEnd_toStartOf="@id/img_chevron"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="10dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/ring_tgpa"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="70"
                    app:indicatorSize="78dp"
                    app:trackThickness="7dp"
                    app:indicatorInset="0dp"
                    app:trackColor="#1A000000" />

                <!-- ONLY NUMBER in the center -->
                <TextView
                    android:id="@+id/txt_ring_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="8.92"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/sf_pro" />
            </FrameLayout>

            <ImageView
                android:id="@+id/img_chevron"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_chevron_down"
                android:contentDescription="Expand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Details -->
        <LinearLayout
            android:id="@+id/details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#14000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
