<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:shimmer_auto_start="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/shimmer_student_results" />
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Header row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_icon_circle"
                    android:padding="10dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Back"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/txt_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Results"
                    android:textColor="#2D2D2D"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/sf_pro"
                    android:layout_toEndOf="@+id/btn_back"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/btn_info"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_info"
                    android:contentDescription="Info" />
            </RelativeLayout>

            <!-- Overall CGPA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#33F5A300"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overall CGPA"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/sf_pro"/>

                    <TextView
                        android:id="@+id/txt_overall_cgpa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="--"
                        android:textColor="@android:color/black"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/sf_pro"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="(Average of all Semester TGPAs)"
                        android:textColor="#7A7A7A"
                        android:textSize="13sp"
                        android:fontFamily="@font/sf_pro"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Semesters list -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:text="Semester-wise"
                android:textColor="#4A4A4A"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/sf_pro" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_semesters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
