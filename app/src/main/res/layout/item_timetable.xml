<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_timetable"
        android:padding="12dp">

        <!-- ✅ Message (No classes / Weekend) -->
        <TextView
            android:id="@+id/emptyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No classes available"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/sf_pro"
            android:gravity="center"
            android:maxLines="3"
            android:ellipsize="end"
            android:visibility="gone" />

        <!-- ✅ Course Code -->
        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="2510CS1002"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/sf_pro"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- ✅ Status chip -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_below="@id/subject"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:text="Upcoming"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro"
            android:background="@drawable/bg_status_chip" />

        <!-- ✅ Time slot pill -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/circlewithwhitebg"
            android:gravity="center">

            <TextView
                android:id="@+id/timeSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.55-9.45 AM"
                android:textColor="@color/DarkGray"
                android:textStyle="bold"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
