<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient"
    android:padding="18dp">

    <!-- Top row -->
    <LinearLayout
        android:id="@+id/topRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Good Morning, User!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/sf_pro"/>

        <ImageView
            android:id="@+id/btnRefresh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_refresh"
            android:contentDescription="Refresh"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="3dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="12dp"/>

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="3dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- CONTENT -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topRow"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <!-- Card 1 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAcademic"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvAcademicTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Academic Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/sf_pro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAcademicTitle"
                    android:layout_marginTop="6dp"
                    android:text="Attendance • Timetable • Grades"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/sf_pro"/>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_academic_illustration"
                    android:contentDescription="Academic image"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"/>

        <!-- Card 2 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStudy"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvStudyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study Materials"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/sf_pro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvStudyTitle"
                    android:layout_marginTop="6dp"
                    android:text="Course material • Assignments"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/sf_pro"/>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_study_illustration"
                    android:contentDescription="Study image"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- SHIMMER OVERLAY (shown while loading) -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topRow"
        android:layout_marginTop="18dp"
        android:visibility="gone"
        app:shimmer_auto_start="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- shimmer block 1 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/shimmer_block"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="14dp"/>

            <!-- shimmer block 2 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/shimmer_block"/>
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</RelativeLayout>
